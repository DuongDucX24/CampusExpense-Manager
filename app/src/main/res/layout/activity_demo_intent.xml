<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Website"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter URL website"
        android:autofillHints="False"
        android:inputType="textUri"
        android:id="@+id/edtURL"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load"
        android:id="@+id/btnLoadURL"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter phone number"
        android:autofillHints="false"
        android:inputType="phone"
        android:layout_marginTop="20dp"
        android:id="@+id/phone"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:text="Call phone"
        android:textColor="@color/white"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/btnCallPhone"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4BA0D"
        android:layout_marginTop="10dp"
        android:text="Go to an other Activity"
        android:id="@+id/btnGotoActivity"/>
</LinearLayout>