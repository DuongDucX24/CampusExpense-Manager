<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.ExpenseOverviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Expense Overview"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Monthly Summary Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monthly Summary"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTotalSpending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Spending: ₫0"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvTotalBudget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Budget: ₫0"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvRemainingBudget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remaining Budget: ₫0"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <ProgressBar
                    android:id="@+id/progressBudget"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:progress="50"
                    android:max="100" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Category Breakdown Section with Chart -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category Breakdown"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp" />

                <!-- Safe Chart Container with Placeholder -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvNoCategoryData"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:text="No expense data available"
                        android:visibility="gone" />

                    <!-- Chart will be loaded here only if data is available -->
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:visibility="visible" />

                </FrameLayout>

                <!-- Recycler View for Category List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCategoryBreakdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Monthly Trend Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monthly Trends"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp" />

                <!-- Safe Line Chart Container with Placeholder -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvNoTrendData"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:text="Not enough data to show trends"
                        android:visibility="gone" />

                    <!-- Line chart will be loaded here only if data is available -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:visibility="visible" />

                </FrameLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Button to view detailed reports -->
        <Button
            android:id="@+id/btnViewDetailedReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Detailed Report" />

    </LinearLayout>

</ScrollView>
